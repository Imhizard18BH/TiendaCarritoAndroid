<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/black"
    tools:context=".actividades.DetalleProductoActivity">
    <fragment
        android:id="@+id/barra_superior"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        class="co.edu.eam.miprimeraapp.fragmentos.BarraSuperiorFragmentLogin"/>

    <LinearLayout
        android:id="@+id/parte_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/default_product"
            android:contentDescription="@string/img_producto"
            android:layout_marginStart="120dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Memoria USB 8GB"
                android:textColor="@color/white"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                app:strokeColor="#FF0000"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memoria USB de 8GB para que guardes toda tu informacion necesaria, como musica,fotos y videos"
                    android:textColor="@color/white"/>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="$ 40000.0"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/comentario1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentario 1"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/img_producto"
            android:src="@drawable/default_product" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="30dp"
            android:layout_weight="10"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/font_awesome_6_free_solid_900"
            android:padding="0dp"
            android:text="\uf005"
            android:textColor="@color/yellow"
            android:textSize="25sp" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_weight="10"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/font_awesome_6_free_solid_900"
            android:padding="0dp"
            android:text="\uf005"
            android:textColor="@color/yellow"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/comentario2"
            android:layout_marginStart="140dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentario 2"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/img_producto"
            android:src="@drawable/default_product" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="195dp"
            android:layout_marginTop="30dp"
            android:layout_weight="10"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/font_awesome_6_free_solid_900"
            android:padding="0dp"
            android:text="\uf005"
            android:textColor="@color/yellow"
            android:textSize="25sp" />
        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="30dp"
            android:layout_weight="10"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/font_awesome_6_free_solid_900"
            android:padding="0dp"
            android:text="\uf005"
            android:textColor="@color/yellow"
            android:textSize="25sp" />


    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agregar_carrito"
        android:backgroundTint="@color/yellow"
        android:layout_gravity="end"
        android:layout_marginTop="150dp"/>

</LinearLayout>